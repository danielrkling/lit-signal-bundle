{
  "name": "vite-lit-ts-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:lit": "npm run build:lit:js && npm run build:lit:types",
    "build:lit:js": "esbuild lit/src/index.ts --outfile=dist/lit.js --bundle --format=esm --minify --analyze",
    "build:lit:types": "dts-bundle-generator -o dist/lit.d.ts lit/src/index.ts --external-inlines lit lit-html lit-element @lit/reactive-element @types/trusted-types @lit/context",
    "build:lit+signals": "npm run build:lit+signals:js && npm run build:lit+signals:types ",
    "build:lit+signals:js": "esbuild lit+signals/src/index.ts --outfile=dist/lit+signals.js --bundle --format=esm --analyze  --alias:signal-polyfill=./signals.js --external:./signals.js  --alias:lit=./lit.js --alias:lit/html.js=./lit.js --alias:lit/async-directive.js=./lit.js --alias:lit/directive.js=./lit.js --external:./lit.js",
    "build:lit+signals:types": "dts-bundle-generator -o dist/lit+signals.d.ts lit+signals/src/index.ts --external-inlines @lit-labs/signals",
    "build:signals": "npm run build:signals:js && npm run build:signals:types",
    "build:signals:js": "esbuild signals/src/index.ts --outfile=dist/signals.js --bundle --format=esm --minify --analyze",
    "build:signals:types": "dts-bundle-generator -o dist/signals.d.ts signals/src/index.ts --external-inlines signal-polyfill signal-utils"

  },
  "dependencies": {
    "@lit-labs/context": "^0.5.1",
    "@lit-labs/signals": "^0.1.1",
    "lit": "^3.2.1",
    "signal-polyfill": "^0.2.0",
    "signal-utils": "^0.20.0"
  },
  "devDependencies": {
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.8"
  }
}
